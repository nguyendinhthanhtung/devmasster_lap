@model IEnumerable<NetCoreMVCLab03.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Danh sach các cuốn sách </h1>
<form action="" method="POST" class="form-inline" role="form">
    <div class="form-group">
        <select name="AthorID" class="form-control" asp-items="@ViewBag.authors">
            <option value="">chọn thể loại</option>
        </select>
        <select name="GenderID" class="form-control" asp-items="@ViewBag.genres">
            <option value="">chọn thể loại</option>
        </select>
    </div>
   <button type="submit"class="btn btn-primary">Tìm kiếm</button>
   <a asp-action="Create" class="btn btn-danger">Thêm mới </a>
</form>
<hr />
<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề </th>
            <th>Tác giả </th>
            <th>Thể loại</th>
            <th>Giá </th>
            <th>Hình ảnh </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenresId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary">sửa</a>
                </td>
            </tr>
        }

    </tbody>
</table>

