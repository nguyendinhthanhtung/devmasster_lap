@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts;
}
<div class="row">
    @foreach (var item in accounts)
    {
        <div class=" col-md-4">
            <img src="@item.Avatar"alt="">
            <div class="caption">
            <h3>@item.Name</h3>
            <p>
                @item.Bio
            </p>
            <p>
                <a asp-controller="Account" asp-action="Profile" class="btn btn success btn-block">Profile</a>
            </p>
            </div>
            </div>

    }
</div>
